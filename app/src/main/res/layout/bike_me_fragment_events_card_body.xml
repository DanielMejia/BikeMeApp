<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="22dp"
    android:paddingStart="22dp"
    android:paddingRight="15dp"
    android:paddingEnd="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:background="@color/divider"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        android:elevation="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hour_event"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="12:00 PM"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="0dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_event"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:text="Medium Text"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/guest_event_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textSize="14sp"
                            android:text="Invitado "/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/start_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:background="@drawable/border_layout"
                        android:textSize="12sp"
                        android:text="Salida: "/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/button_see_more"
                        android:layout_width="0dp"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_weight="0.5"
                        android:background="@drawable/border_layout"
                        android:text="@string/events_see_more_text"
                        android:textColor="@color/primary" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/guest_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/primary"
                android:src="@drawable/ic_start" />

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>